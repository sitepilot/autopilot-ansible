# {{ sitepilot_managed }}
serverName                {{ hostname }}
user                      {{ admin }}
group                     {{ admin }}
priority                  0
inMemBufSize              60M
swappingDir               /opt/sitepilot/services/olsws/tmp/swap
autoFix503                1
gracefulRestartTimeout    300
mime                      conf/mime.properties
showVersionNumber         0
useIpInProxyHeader        2
adminEmails               {{ admin_email }}

errorlog /opt/sitepilot/services/olsws/logs/error.log {
  logLevel                WARN
  debugLevel              0
  rollingSize             10M
  enableStderrLog         1
}

accesslog /opt/sitepilot/services/olsws/logs/access.log {
  rollingSize             10M
  keepDays                30
  compressArchive         0
}

indexFiles                index.php, index.html

expires  {
  enableExpires           1
  expiresByType           image/*=A604800,text/css=A604800,application/x-javascript=A604800,application/javascript=A604800,font/*=A604800,application/x-font-ttf=A604800
}

autoLoadHtaccess          1

tuning  {
  maxConnections          10000
  maxSSLConnections       10000
  connTimeout             300
  maxKeepAliveReq         10000
  keepAliveTimeout        5
  sndBufSize              0
  rcvBufSize              0
  maxReqURLLen            32768
  maxReqHeaderSize        65536
  maxReqBodySize          2047M
  maxDynRespHeaderSize    32768
  maxDynRespSize          2047M
  maxCachedFileSize       4096
  totalInMemCacheSize     20M
  maxMMapFileSize         256K
  totalMMapCacheSize      40M
  useSendfile             1
  fileETag                28
  enableGzipCompress      1
  compressibleTypes       text/*, application/x-javascript, application/xml, application/javascript, image/svg+xml,application/rss+xml
  enableDynGzipCompress   1
  gzipCompressLevel       6
  gzipAutoUpdateStatic    1
  gzipStaticCompressLevel 6
  brStaticCompressLevel   6
  gzipMaxFileSize         10M
  gzipMinFileSize         300

  quicEnable              1
  quicShmDir              /dev/shm
}

fileAccessControl  {
  followSymbolLink        1
  checkSymbolLink         0
  requiredPermissionMask  000
  restrictedPermissionMask 000
}

perClientConnLimit  {
  staticReqPerSec         0
  dynReqPerSec            0
  outBandwidth            0
  inBandwidth             0
  softLimit               10000
  hardLimit               10000
  gracePeriod             15
  banPeriod               300
}

CGIRLimit  {
  maxCGIInstances         20
  minUID                  11
  minGID                  10
  priority                0
  CPUSoftLimit            10
  CPUHardLimit            50
  memSoftLimit            1460M
  memHardLimit            1470M
  procSoftLimit           400
  procHardLimit           450
}

accessDenyDir  {
  dir                     /
  dir                     /etc/*
  dir                     /dev/*
  dir                     conf/*
  dir                     admin/conf/*
}

accessControl  {
  allow                   ALL, ::1T, 127.0.0.1T, 173.245.48.0/20T, 103.21.244.0/22T, 103.22.200.0/22T, 103.31.4.0/22T, 141.101.64.0/18T, 108.162.192.0/18T, 190.93.240.0/20T, 188.114.96.0/20T, 197.234.240.0/22T, 198.41.128.0/17T, 162.158.0.0/15T, 104.16.0.0/12T, 172.64.0.0/13T, 131.0.72.0/22T, 2400:cb00::/32T, 2606:4700::/32T, 2803:f800::/32T, 2405:b500::/32T, 2405:8100::/32T, 2a06:98c0::/29T, 2c0f:f248::/32T, 94.237.45.74T, 10.5.8.75T
}

lsrecaptcha  {
  enabled                 1
  type                    1

  botWhiteList  {

  }
}

module cache {
  internal                1
  checkPrivateCache       1
  checkPublicCache        1
  maxCacheObjSize         10000000
  maxStaleAge             200
  qsCache                 1
  reqCookieCache          1
  respCookieCache         1
  ignoreReqCacheCtrl      1
  ignoreRespCacheCtrl     0

  enableCache             0
  expireInSeconds         3600
  enablePrivateCache      0
  privateExpireInSeconds  3600

  storagepath /opt/sitepilot/services/olsws/tmp/cachedata
  ls_enabled            1
}

module mod_security {
  modsecurity  on
  modsecurity_rules 
  SecRuleEngine On
  modsecurity_rules_file /opt/sitepilot/services/olsws/cwaf/rules.conf.main
}

extProcessor lsphp74 {
    type                            lsapi 
    address                         uds://opt/sitepilot/services/olsws/tmp/lsphp74.sock 
    autoStart                       1
    path                            lsphp74/bin/lsphp
    maxConns                        5
    env                             PHP_LSAPI_CHILDREN=5
}

extProcessor lsphp73 {
    type                            lsapi 
    address                         uds://opt/sitepilot/services/olsws/tmp/lsphp73.sock 
    autoStart                       1
    path                            lsphp73/bin/lsphp
    maxConns                        5
    env                             PHP_LSAPI_CHILDREN=5
}

extprocessor phpMyAdmin {
  type                    proxy
  address                 http://127.0.0.1:9001
  maxConns                2000
  initTimeout             60
  retryTimeout            0
  respBuffer              0
}

extprocessor nodeExporter {
  type                    proxy
  address                 http://127.0.0.1:9100
  maxConns                2000
  initTimeout             60
  retryTimeout            0
  respBuffer              0
}

listener http {
  address               [ANY]:7081
  secure                0
}

listener https {
  address               [ANY]:7082
  secure                1
  keyFile               $SERVER_ROOT/conf/cert/server.key
  certFile              $SERVER_ROOT/conf/cert/server.crt
}

include /opt/sitepilot/services/olsws/vhosts/*.conf
