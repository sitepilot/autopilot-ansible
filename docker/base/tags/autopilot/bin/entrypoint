#!/bin/bash

# ==================================
# FUNCTIONS
# ==================================
log() {
    echo "[INFO] $1"
}

logWarning() {
    echo "[WARNING] $1"
}

logError() {
    echo "[ERROR] $1"
}

generate() {
    SOURCE_FILE=$1
    DEST_FILE=$2
    
    cat $SOURCE_FILE | perl -p -e 's/\$\{([^}]+)\}/defined $ENV{$1} ? $ENV{$1} : $&/eg' > $DEST_FILE
}

fileEnv() {
	local var="$1"
	local fileVar="${var}_FILE"
	local def="${2:-}"
	if [ "${!var:-}" ] && [ "${!fileVar:-}" ]; then
		log "Both $var and $fileVar are set (but are exclusive)"
	fi
	local val="$def"
	if [ "${!var:-}" ]; then
		val="${!var}"
	elif [ "${!fileVar:-}" ]; then
		val="$(< "${!fileVar}")"
	fi
	export "$var"="$val"
	unset "$fileVar"
}

log "Configuring webserver..."

# ==================================
# DIRECTORIES
# ==================================
folders=("/tmp/lshttpd" "/usr/local/lsws/conf/vhosts/app" "/var/www/html" "/var/www/logs" "/var/www/tmp")
for i in "${folders[@]}"
do
   if [[ ! -d $i ]]; then 
    log "Creating folder $i..."
    mkdir -p $i
   fi
done

# ==================================
# ENVIRONMENT / SECRETS
# ==================================
if [ -f "$SMTP_AUTH_USER_FILE" ]; then 
    log "Loading SMTP auth user..."
    fileEnv 'SMTP_AUTH_USER'
else 
    logWarning "No SMTP auth user was loaded..."
    SMTP_AUTH_USER=""
fi

if [ -f "$SMTP_AUTH_PASSWORD_FILE" ]; then 
    log "Loading SMTP auth password..."
    fileEnv 'SMTP_AUTH_PASSWORD'
else 
    logWarning "No SMTP auth password was loaded..."
    SMTP_AUTH_PASSWORD=""
fi

if [[ $WEBSERVER_CACHE = "on" ]]; then 
    log "Enable webserver cache..."
    export WEBSERVER_CACHE_ENABLED="1"
else 
    log "Disable webserver cache..."
    export WEBSERVER_CACHE_ENABLED="0"
fi

# ==================================
# GENERATE CONFIGURATION FILES
# ==================================
log "Generating configuration files..."
generate /autopilot/conf/webserver/httpd_config.conf /usr/local/lsws/conf/httpd_config.conf
generate /autopilot/conf/webserver/vhconf.conf /usr/local/lsws/conf/vhosts/app/vhconf.conf

# ==================================
# PERMISSIONS
# ==================================
log "Updating user ID and GID..."
groupmod -g $WEBSERVER_USER_GID $WEBSERVER_USER_NAME
usermod -u $WEBSERVER_USER_ID $WEBSERVER_USER_NAME

log "Updating file permissions..."
if [[ $SET_VHOST_FILE_PERMISSIONS = "yes" ]]; then 
    chown -R $WEBSERVER_USER_NAME:$WEBSERVER_USER_NAME /var/www/html
fi

chown -R lsadm:lsadm /usr/local/lsws/conf
chown -R $WEBSERVER_USER_NAME:$WEBSERVER_USER_NAME /tmp/lshttpd

chown $WEBSERVER_USER_NAME:$WEBSERVER_USER_NAME /var/www
chown -R $WEBSERVER_USER_NAME:$WEBSERVER_USER_NAME /var/www/logs
chown -R $WEBSERVER_USER_NAME:$WEBSERVER_USER_NAME /var/www/tmp
chown -R $WEBSERVER_USER_NAME:$WEBSERVER_USER_NAME /var/www/tests
chmod 600 /var/www/tests/test_key

# ==================================
# CRONJOBS
# ==================================
CRONFILE=/autopilot/conf/crontabs/app
if test -f "$CRONFILE"; then
    log "Loading crontab ($CRONFILE)..."
    crontab $CRONFILE
fi

exec "$@"